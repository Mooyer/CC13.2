<!-- 
This rule instructs the server to auto-route Chest studies to MatrixPACS
between 18:00:00 and 06:00:00
-->
<rule>
	<condition
	  expressionLanguage="dicom">
		<regex
		  test="$StudyDescription"
		  pattern="chest" />
	</condition>
	<action>
		<auto-route
		  device="MatrixPACS" 
		  startTime="18:00:00"
		  endTime="06:00:00" />
	</action>
</rule>